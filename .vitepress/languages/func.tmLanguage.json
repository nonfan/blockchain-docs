{
  "name": "FunC",
  "scopeName": "source.func",
  "fileTypes": ["fc", "func"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.func",
          "match": ";;.*$"
        },
        {
          "name": "comment.block.func",
          "begin": "\\{-",
          "end": "-\\}"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.func",
          "match": "\\b(if|ifnot|else|elseif|elseifnot|while|do|until|repeat|return|impure|inline|inline_ref|method_id)\\b"
        },
        {
          "name": "keyword.other.func",
          "match": "\\b(const|global|asm|forall)\\b"
        },
        {
          "name": "storage.modifier.func",
          "match": "\\b(impure|inline|inline_ref|method_id)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.func",
          "match": "\\b(int|cell|slice|builder|tuple|cont)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.func",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_~]*)\\s*\\("
        },
        {
          "name": "support.function.func",
          "match": "\\b(begin_cell|end_cell|begin_parse|load_uint|load_int|load_coins|load_msg_addr|load_ref|store_uint|store_int|store_coins|store_slice|store_ref|send_raw_message|get_data|set_data|accept_message|throw|throw_if|throw_unless|equal_slices|slice_empty\\?|cell_hash|slice_hash|check_signature)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.func",
          "match": "(~|\\+|\\-|\\*|\\/|%|==|!=|<|>|<=|>=|&|\\||\\^|<<|>>|\\?|:)"
        },
        {
          "name": "keyword.operator.assignment.func",
          "match": "(=|\\+=|\\-=|\\*=|\\/=|%=)"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.func",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.func",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.decimal.func",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.func",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.func",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  }
}
